---
import BaseLayout from "../layouts/BaseLayout.astro";
import RaceCard from "../components/RaceCard.astro";

const races = [
    {
        day: "Maandag",
        category: "Manufactures Cup",
        title: "RTW Manufactures Cup GR3",
        description:
            "Treed in de voetsporen van de officiÃ«le Gran Turismo kampioenschappen met de GR3 auto's. Kies je favoriete merk en strijd mee voor de overwinning.",
        imageUrl: "/images/races/maandag.png", // Placeholders until images are downloaded
    },
    {
        day: "Dinsdag",
        category: "King of Spa-Francorchamps",
        title: "RTW Spa-Francorchamps",
        description:
            "Een vaste prik voor de liefhebbers! Elke dinsdag racen we op het legendarische circuit van Spa-Francorchamps in verschillende klassen.",
        imageUrl: "/images/races/dinsdag.png",
    },
    {
        day: "Woensdag",
        category: "Ferrari Sprint Challenge",
        title: "RTW BMW M4 Sprint cup",
        description:
            "Korte, intense sprintraces waar elke seconde telt. Ideaal om je inhaalacties en verdedigende lijnen te perfectioneren.",
        imageUrl: "/images/races/woensdag.png",
    },
    {
        day: "Donderdag",
        category: "Roadcar Championship",
        title: "RTW GR2 Sponsercup race",
        description:
            "Sluit je aan bij de sponsorencup! Aerodynamica en pure snelheid met de brute krachten van de GR2 machines.",
        imageUrl: "/images/races/donderdag.png",
    },
    {
        day: "Vrijdag",
        category: "Fun Friday",
        title: "RTW FUN FRIDAY & FRIENDS",
        description:
            "De naam zegt het al: ludieke races, gekke combinaties en vooral heel veel gezelligheid om het weekend in te luiden.",
        imageUrl: "/images/races/vrijdag.png",
    },
    {
        day: "Zaterdag",
        category: "Special Events",
        title: "Special events",
        description:
            "Regelmatig organiseren we op zaterdag speciale evenementen en toernooien. Houd de Discord in de gaten voor aankondigingen!",
        imageUrl: "/images/races/zaterdag.png",
    },
    {
        day: "Zondag",
        category: "Endurance Championship 2025",
        title: "RTW Endurance Races",
        description:
            "Test je concentratie, bandenmanagement en pitstopstrategie in de langere endurance races op de zondagmiddag/avond.",
        imageUrl: "/images/races/zondag.png",
    },
];
---

<BaseLayout
    title="Dagelijkse Races - Race Team Wolters"
    description="Bekijk het wekelijkse schema van Race Team Wolters. Van sprintraces tot endurance, wij racen 7 dagen per week in Gran Turismo 7."
>
    <!-- Header -->
    <section
        class="pt-32 pb-16 bg-brand-dark border-b border-white/5 relative overflow-hidden"
    >
        <!-- Abstract background pattern -->
        <div
            class="absolute right-0 top-0 opacity-10 pointer-events-none transform translate-x-1/3 -translate-y-1/4"
        >
            <svg
                width="600"
                height="600"
                viewBox="0 0 200 200"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    fill="#C0392B"
                    d="M42.7,-73.4C55.4,-65.4,65.8,-52.4,75.1,-37.9C84.4,-23.4,92.6,-7.4,89.5,6.7C86.4,20.8,72,32.9,60.1,43.7C48.2,54.5,38.8,64,26.7,69.5C14.6,75,0,76.5,-15.5,75.3C-31,74.1,-47.4,70.2,-58.5,59.8C-69.6,49.4,-75.4,32.5,-79.8,15.1C-84.2,-2.3,-87.2,-20.2,-79.9,-33.4C-72.6,-46.6,-55,-55.1,-40.4,-62C-25.8,-68.9,-14.2,-74.2,1,-75.8C16.2,-77.4,30,-75.1,42.7,-73.4Z"
                    transform="translate(100 100)"></path>
            </svg>
        </div>

        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <h1
                class="text-4xl md:text-6xl font-headings font-bold uppercase tracking-wider text-white mb-6 drop-shadow"
            >
                Dagelijkse <span class="text-brand-red">Races</span>
            </h1>
            <div class="w-24 h-1 bg-brand-red mb-8"></div>
            <p
                class="text-gray-300 font-roboto text-xl max-w-3xl leading-relaxed"
            >
                Elke dag van de week organiseren we lobby's en
                kampioenschapsraces in Gran Turismo 7. Hieronder vind je het
                standaard wekelijkse schema.
            </p>
        </div>
    </section>

    <!-- Races Grid -->
    <section class="py-20 bg-brand-dark">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8"
            >
                {races.map((race) => <RaceCard {...race} />)}
            </div>

            <div
                class="mt-20 text-center bg-brand-gray p-10 rounded-xl border border-white/5"
            >
                <h2
                    class="text-2xl md:text-3xl font-headings font-bold uppercase text-white mb-4"
                >
                    Wil je meedoen?
                </h2>
                <p class="text-gray-400 font-roboto mb-8 max-w-2xl mx-auto">
                    Word lid van onze community. Meld je aan via de
                    inschrijfpagina en krijg toegang tot onze Discord server
                    waar alle lobbies gedeeld worden.
                </p>
                <a
                    href="/nieuwe-leden"
                    class="inline-block bg-brand-red text-white hover:bg-white hover:text-brand-red font-headings font-bold uppercase tracking-wider px-8 py-4 transition-all duration-300 shadow-lg hover:scale-105"
                >
                    Schrijf je nu in
                </a>
            </div>
        </div>
    </section>
</BaseLayout>
