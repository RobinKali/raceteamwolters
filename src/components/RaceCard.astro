---
interface Props {
    day: string;
    category: string;
    title: string;
    description: string;
    imageUrl?: string;
    link?: string;
}

const {
    day,
    category,
    title,
    description,
    imageUrl,
    link = "/contact",
} = Astro.props;
---

<div
    class="bg-brand-gray rounded-xl overflow-hidden shadow-lg border border-white/5 hover:border-brand-red/50 transition-all duration-300 group flex flex-col h-full transform hover:-translate-y-2"
>
    <!-- Image Header -->
    <div
        class="relative h-48 sm:h-56 overflow-hidden bg-brand-dark flex items-center justify-center"
    >
        {
            imageUrl ? (
                <img
                    src={imageUrl}
                    alt={`${title} op ${day}`}
                    class="w-full h-full object-cover opacity-80 group-hover:opacity-100 group-hover:scale-105 transition-all duration-500"
                    loading="lazy"
                />
            ) : (
                <div class="w-full h-full bg-gradient-to-br from-brand-gray to-brand-dark flex items-center justify-center opacity-80 group-hover:opacity-100 transition-opacity duration-300">
                    <span class="font-headings text-4xl font-bold text-white/10 uppercase tracking-widest">
                        {day}
                    </span>
                </div>
            )
        }

        <!-- Day Badge -->
        <div
            class="absolute top-4 right-4 bg-brand-red text-white font-headings uppercase font-bold px-4 py-1 rounded shadow-lg"
        >
            {day}
        </div>
    </div>

    <!-- Content -->
    <div class="p-6 flex flex-col flex-grow relative">
        <div
            class="text-brand-yellow font-headings uppercase text-sm font-bold tracking-wider mb-2"
        >
            {category}
        </div>

        <h3
            class="text-2xl font-headings font-bold text-white uppercase mb-3 leading-tight group-hover:text-brand-red transition-colors"
        >
            {title}
        </h3>

        <p
            class="text-gray-400 font-roboto mb-6 flex-grow text-sm leading-relaxed"
        >
            {description}
        </p>

        <!-- CTA -->
        <div class="mt-auto pt-4 border-t border-white/10">
            <a
                href={link}
                class="inline-flex items-center text-white font-headings uppercase tracking-wider font-bold text-sm hover:text-brand-yellow transition-colors group/link"
            >
                Lees meer
                <svg
                    class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
            </a>
        </div>
    </div>
</div>
