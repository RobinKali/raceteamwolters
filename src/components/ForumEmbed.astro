---
// This component fetches recent discussions from the Flarum API
// using our local Astro API endpoint as a proxy to avoid CORS issues on client-side
// or fetches them server-side during build/SSR

interface Discussion {
    id: string;
    attributes: {
        title: string;
        slug: string;
        createdAt: string;
        lastPostedAt: string;
    };
}

interface FlarumResponse {
    data: Discussion[];
}

let discussions: Discussion[] = [];
let error = false;

try {
    // During dev or if the endpoint isn't fully ready, provide mock data
    // In production, this would fetch from a real Flarum API
    const isProd = import.meta.env.PROD;

    if (isProd) {
        // Example of how we'd fetch if we had the actual Flarum URL configured
        // const response = await fetch('https://forum.raceteamwolters.nl/api/discussions?sort=-createdAt&page[limit]=3');
        // const json = await response.json() as FlarumResponse;
        // discussions = json.data;
        throw new Error("API not yet connected"); // Fallback to mock for now
    } else {
        throw new Error("Use mock data in dev");
    }
} catch (e) {
    // Mock data for initial development
    discussions = [
        {
            id: "1",
            attributes: {
                title: "Welkom bij het nieuwe Race Team Wolters Forum!",
                slug: "welkom-bij-rtw-forum",
                createdAt: new Date().toISOString(),
                lastPostedAt: new Date().toISOString(),
            },
        },
        {
            id: "2",
            attributes: {
                title: "Inschrijvingen Endurance Cup 2026 geopend",
                slug: "inschrijvingen-endurance-cup-2026",
                createdAt: new Date(Date.now() - 86400000).toISOString(), // 1 day ago
                lastPostedAt: new Date(Date.now() - 3600000).toISOString(),
            },
        },
        {
            id: "3",
            attributes: {
                title: "Setup delen: Porsche GT3 op Spa",
                slug: "setup-delen-porsche-gt3-spa",
                createdAt: new Date(Date.now() - 172800000).toISOString(), // 2 days ago
                lastPostedAt: new Date(Date.now() - 86400000).toISOString(),
            },
        },
    ];
}

const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleDateString("nl-NL", {
        day: "numeric",
        month: "short",
        year: "numeric",
    });
};
---

<section class="py-20 bg-brand-gray border-y border-white/5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-end mb-12">
            <div>
                <h2
                    class="text-3xl md:text-5xl font-headings font-bold uppercase tracking-wider text-white mb-4"
                >
                    Laatste op het <span class="text-brand-red">Forum</span>
                </h2>
                <div class="w-24 h-1 bg-brand-red mb-6"></div>
                <p class="text-gray-400 max-w-2xl font-roboto text-lg">
                    Praat mee over setups, evenementen en de laatste races met
                    de RTW community.
                </p>
            </div>

            <a
                href="/forum"
                class="hidden md:inline-flex items-center bg-transparent border-2 border-brand-red text-white hover:bg-brand-red hover:text-white font-headings uppercase tracking-wider px-6 py-3 font-bold transition-all duration-300"
            >
                Ga naar forum
                <svg
                    class="w-5 h-5 ml-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {
                discussions.map((discussion) => (
                    <a
                        href={`/forum/d/${discussion.attributes.slug}`}
                        class="bg-brand-dark p-6 rounded border border-white/5 hover:border-brand-yellow/50 transition-all duration-300 group hover:-translate-y-1 shadow-lg"
                    >
                        <div class="flex items-start justify-between mb-4">
                            <div class="bg-brand-red/20 text-brand-red text-xs font-headings uppercase font-bold px-2 py-1 rounded">
                                Discussie
                            </div>
                            <span class="text-xs text-gray-500 font-roboto">
                                {formatDate(discussion.attributes.lastPostedAt)}
                            </span>
                        </div>

                        <h3 class="text-xl font-headings font-bold text-white mb-4 group-hover:text-brand-yellow transition-colors line-clamp-2">
                            {discussion.attributes.title}
                        </h3>

                        <div class="mt-auto flex items-center text-sm text-gray-400 group-hover:text-white transition-colors">
                            <span class="font-headings uppercase tracking-wider text-xs">
                                Lees topic
                            </span>
                            <svg
                                class="w-4 h-4 ml-2"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"
                                />
                            </svg>
                        </div>
                    </a>
                ))
            }
        </div>

        <!-- Mobile CTA -->
        <div class="mt-10 text-center md:hidden">
            <a
                href="/forum"
                class="inline-flex items-center w-full justify-center bg-transparent border-2 border-brand-red text-white hover:bg-brand-red hover:text-white font-headings uppercase tracking-wider px-6 py-3 font-bold transition-all duration-300"
            >
                Ga naar forum
                <svg
                    class="w-5 h-5 ml-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
            </a>
        </div>
    </div>
</section>
