---
import BaseLayout from '../layouts/BaseLayout.astro';

// Mock data representing the "Content Team" based on the homepage stats (13 content makers, 9 hosts)
const teamMembers = [
    {
        name: "Gerald Wolters",
        role: "Oprichter & Beheerder",
        psn: "RTW_GeraldWolters",
        image: "/images/placeholders/avatar-1.jpg" // Placeholder
    },
    {
        name: "De Rikkert",
        role: "Event Organizer & Host",
        psn: "RTW_De_Rikkert",
        image: "/images/placeholders/avatar-2.jpg"
    },
    {
        name: "PauloooD",
        role: "Content Creator & Host",
        psn: "RTW_PauloooD",
        image: "/images/placeholders/avatar-3.jpg"
    },
    {
        name: "Wokkel1976",
        role: "Race Steward & Commentator",
        psn: "RTW_Wokkel1976",
        image: "/images/placeholders/avatar-4.jpg"
    },
    {
        name: "RoBeY-D",
        role: "Host Dagelijkse Races",
        psn: "RTW_RoBeY-D",
        image: "/images/placeholders/avatar-5.jpg"
    },
    {
        name: "Kenneth v Di",
        role: "Videograaf & Editor",
        psn: "RTW_Kenneth_v_Di",
        image: "/images/placeholders/avatar-6.jpg"
    }
];

---

<BaseLayout title="Content Team - Race Team Wolters" description="Maak kennis met de drijvende krachten achter Race Team Wolters.">
    <!-- Header Vector background -->
    <section class="pt-32 pb-16 bg-brand-dark border-b border-white/5 relative overflow-hidden">
        <div class="absolute inset-x-0 bottom-0 h-32 bg-linear-to-t from-brand-gray to-transparent z-0"></div>
        
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
            <h1 class="text-4xl md:text-6xl font-headings font-bold uppercase tracking-wider text-white mb-6 drop-shadow">
                Het <span class="text-brand-red">Content Team</span>
            </h1>
            <div class="w-24 h-1 bg-brand-red mx-auto mb-8"></div>
            <p class="text-gray-300 font-roboto text-xl max-w-3xl mx-auto leading-relaxed">
                Zonder dit team geen Race Team Wolters. Achter de schermen werken deze 13 content makers en 9 hosts dagelijks om de community te faciliteren en te vermaken.
            </p>
        </div>
    </section>

    <!-- Team Grid -->
    <section class="py-24 bg-brand-gray min-h-[50vh]">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                {teamMembers.map((member) => (
                    <div class="bg-brand-dark rounded-xl overflow-hidden border border-white/5 hover:border-brand-red/50 transition-all duration-300 group shadow-lg">
                        <div class="h-64 bg-black/50 relative overflow-hidden">
                            {/* Placeholder for image */}
                            <div class="absolute inset-0 flex items-center justify-center bg-brand-dark group-hover:bg-brand-dark/80 transition-colors">
                                <span class="text-6xl">ðŸ‘¤</span>
                            </div>
                            <!-- Social overlay on hover -->
                            <div class="absolute -bottom-12 left-0 right-0 h-12 bg-brand-red/90 flex justify-center items-center gap-4 group-hover:bottom-0 transition-all duration-300">
                                <a href="#" class="text-white hover:text-brand-dark transition-colors" aria-label="PSN Profile">
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm4 11h-3v3c0 .55-.45 1-1 1s-1-.45-1-1v-3H8c-.55 0-1-.45-1-1s.45-1 1-1h3V8c0-.55.45-1 1-1s1 .45 1 1v3h3c.55 0 1 .45 1 1s-.45 1-1 1z"/></svg>
                                </a>
                                <a href="#" class="text-white hover:text-brand-dark transition-colors" aria-label="Discord">
                                    <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M19.27 5.33C17.94 4.71 16.5 4.26 15 4a.09.09 0 0 0-.07.03c-.18.33-.39.76-.53 1.09a16.09 16.09 0 0 0-4.8 0c-.14-.33-.35-.76-.53-1.09A.09.09 0 0 0 9 4c-1.5.26-2.94.71-4.27 1.33-.01 0-.02.01-.03.02-2.72 4.07-3.47 8.03-3.1 11.95.02.05.05.09.09.13A16.53 16.53 0 0 0 6 19.68a.08.08 0 0 0 .08-.03c.33-.44.64-.9.92-1.38a.08.08 0 0 0-.04-.11 10.5 10.5 0 0 1-1.61-.75.08.08 0 0 1-.01-.13c.12-.1.23-.2.34-.31a.07.07 0 0 1 .08-.01c3.18 1.45 6.61 1.45 9.77 0a.07.07 0 0 1 .08.01c.11.11.22.21.34.31.04.04.05.09.01.13a10.46 10.46 0 0 1-1.61.75.08.08 0 0 0-.04.11c.28.48.59.94.92 1.38.03.03.06.05.09.03 2.14-.65 4.09-1.53 5.86-2.6.04-.04.07-.08.09-.13.43-4.5-.4-8.52-3.16-12.28a.1.1 0 0 0-.02-.02zM8.02 15.33c-1.18 0-2.15-1.08-2.15-2.41s.96-2.41 2.15-2.41c1.2 0 2.17 1.09 2.15 2.41 0 1.33-.96 2.41-2.15 2.41zm7.96 0c-1.18 0-2.15-1.08-2.15-2.41s.96-2.41 2.15-2.41c1.2 0 2.17 1.09 2.15 2.41 0 1.33-.96 2.41-2.15 2.41z"/></svg>
                                </a>
                            </div>
                        </div>
                        
                        <div class="p-6 text-center">
                            <h3 class="text-2xl font-headings font-bold text-white uppercase tracking-wider mb-1 group-hover:text-brand-yellow transition-colors">{member.name}</h3>
                            <p class="text-brand-red font-headings uppercase text-sm font-bold tracking-widest mb-4">{member.role}</p>
                            
                            <div class="inline-block bg-white/5 rounded-full px-4 py-1 border border-white/10">
                                <span class="text-gray-400 font-roboto text-sm flex items-center gap-2">
                                    <svg class="w-4 h-4 text-brand-yellow" fill="currentColor" viewBox="0 0 24 24"><path d="M21 2H3c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h7v2H8v2h8v-2h-2v-2h7c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H3V4h18v12z"/></svg>
                                    {member.psn}
                                </span>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
            
            <div class="mt-20 text-center">
                 <h3 class="text-2xl font-headings font-bold text-white uppercase mb-6">Ook helpen?</h3>
                 <p class="text-gray-400 font-roboto max-w-2xl mx-auto mb-8">
                     Lijkt het je leuk om als host, steward, commentator of editor bij te dragen aan de community? We zijn altijd op zoek naar enthousiaste vrijwilligers!
                 </p>
                 <a href="/contact" class="inline-block border-2 border-brand-red text-white hover:bg-brand-red font-headings uppercase tracking-wider px-8 py-3 transition-colors duration-300 font-bold">
                     Stuur ons een bericht
                 </a>
            </div>
        </div>
    </section>
</BaseLayout>
