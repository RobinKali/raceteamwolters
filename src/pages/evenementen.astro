---
import BaseLayout from "../layouts/BaseLayout.astro";

// In a real scenario, these could be fetched from a CMS
const comingEvents = [
    // Empty array to show "coming soon" state as requested
];
---

<BaseLayout
    title="Evenementen - Race Team Wolters"
    description="Overzicht van aankomende evenementen, toernooien en uitjes van Race Team Wolters."
>
    <section class="pt-32 pb-16 bg-brand-dark border-b border-white/5 relative">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <h1
                class="text-4xl md:text-6xl font-headings font-bold uppercase tracking-wider text-white mb-6 drop-shadow"
            >
                Onze <span class="text-brand-red">Evenementen</span>
            </h1>
            <div class="w-24 h-1 bg-brand-red mb-8"></div>
            <p
                class="text-gray-300 font-roboto text-xl max-w-3xl leading-relaxed"
            >
                Naast onze dagelijkse races organiseren we regelmatig speciale
                toernooien, endurance evenementen en gezellige team-uitjes in
                het echt.
            </p>
        </div>
    </section>

    <section class="py-24 bg-brand-dark min-h-[50vh]">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            {
                comingEvents.length > 0 ? (
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                        {/* Event cards would go here */}
                    </div>
                ) : (
                    <div class="text-center py-20 bg-brand-gray/50 rounded-xl border border-dashed border-white/20">
                        <svg
                            class="mx-auto h-16 w-16 text-brand-yellow mb-6"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                            />
                        </svg>
                        <h2 class="text-2xl font-headings font-bold text-white uppercase tracking-wider mb-2">
                            Binnenkort meer info
                        </h2>
                        <p class="text-gray-400 font-roboto max-w-lg mx-auto">
                            Op dit moment zijn er geen nieuwe speciale
                            evenementen gepland voor de website. Houd onze
                            Discord in de gaten voor last-minute acties!
                        </p>
                        <a
                            href="/contact"
                            class="inline-block mt-8 text-brand-red font-headings uppercase hover:text-white transition-colors border-b-2 border-brand-red pb-1 font-bold"
                        >
                            Neem contact op
                        </a>
                    </div>
                )
            }
        </div>
    </section>
</BaseLayout>
